<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:background="#2E2E2E"
    tools:context="com.teambuild.mp3wizard.PlayerActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:text="Locations Do Not Match"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/LocLocationTextView"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="Local Location: "
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/CloudLocationTextView"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="Cloud Location: "
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/localBtn"
            android:layout_width="122dp"
            android:layout_height="75dp"
            android:text="Local Location" />

        <Button
            android:id="@+id/cloudBtn"
            android:layout_width="122dp"
            android:layout_height="75dp"
            android:text="Cloud Location" />
    </LinearLayout>

</LinearLayout>